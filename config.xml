<?xml version='1.0' encoding='utf-8'?>
<widget id="uk.bbc.dialexample" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>DialExample</name>
    <description>Demonstrates the cordova-plugin-dialclient plugin.</description>
    <author email="rajiv.ramdhany@bbc.co.uk" href="https://github.com/bbc/cordova-dialclient-exampleapp/">
        Rajiv Ramdhany, Jonathan Heathcote
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <plugin name="cordova-dialclient" spec="https://github.com/bbc/cordova-plugin-dialclient.git" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="pods_ios_min_version" value="9.0"/>
        <!-- add use_frameworks! to Podfile, this also disabled bridging headers -->
        <preference name="pods_use_frameworks" value="true"/>
    </platform>
    <engine name="ios" spec="~4.3.1" />
    <plugin name="cordova-plugin-cocoapod-support" spec="~1.3.0" />
</widget>
